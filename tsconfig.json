{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    /* Linting */
    "strict": true,
    "target": "ESNext"
  },
  "exclude": [
    "./vite.config.ts"
  ],
  "include": [
    "src",
    "./.eslintrc.cjs"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}